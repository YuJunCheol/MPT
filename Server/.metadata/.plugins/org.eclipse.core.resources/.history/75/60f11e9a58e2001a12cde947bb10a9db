package XMLConnecter;

import java.io.IOException;
import java.net.URLEncoder;

public class OpenApi {
	private StringBuilder urlBuilder = new StringBuilder("http://openapi.foodsafetykorea.go.kr/api");
	
	public OpenApi() {}
	
	public OpenApi(String service, String mode) {
		this.urlBuilder.append(service + "/"+ mode);
		try {
			this.urlBuilder.append("/" + URLEncoder.encode("serviceKey","UTF-8") + "6a77c9ae0e0d44388de7"); /*Service Key*/
		}catch(IOException e) {
			System.out.println("(Error)OpenApi.OpenApi : ");
			e.printStackTrace();
		}
	}
	
	
	public StringBuilder geturlBuilder() {
		return this.urlBuilder;
	}
}
