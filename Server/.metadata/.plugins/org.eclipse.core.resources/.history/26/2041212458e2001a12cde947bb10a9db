		try {
			this.urlBuilder.append("?" + URLEncoder.encode("serviceKey","UTF-8") + "=k7S1tYFQZZ2hdXqg7Ek3XpldXK4CiZ%2F0ZXI7MdccclXqz7FT%2F2VLYscyt5a3UHgLW2vm56nq0jIX%2FGjCSP5ZjQ%3D%3D"); /*Service Key*/
		}catch(IOException e) {
			System.out.println("�꽌鍮꾩뒪�궎 �뿰寃� �삤瑜�");
		}
	}
	
	
	public StringBuilder geturlBuilder() {
		return this.urlBuilder;
	}
}
